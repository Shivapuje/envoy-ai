# ========================================
# GROQ API KEY (FREE - RECOMMENDED FOR TESTING)
# ========================================
# 1. Go to: https://console.groq.com/keys
# 2. Create an account (free)
# 3. Generate an API key
# 4. Paste it below:
GROQ_API_KEY=gsk_your_groq_api_key_here

# ========================================
# OTHER PROVIDERS (Optional)
# ========================================
# OPENAI_API_KEY=sk-your_openai_key_here
# ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here
# GOOGLE_API_KEY=your_google_api_key_here

# ========================================
# EMAIL INGESTION
# ========================================
IMAP_SERVER=imap.gmail.com
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_app_password

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=sqlite:///./envoy_ai.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@host:5432/envoy_ai

# ========================================
# AUTHENTICATION (JWT & WebAuthn)
# ========================================
# Generate secret: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080  # 7 days

# WebAuthn Configuration
RP_ID=localhost
RP_NAME=Envoy AI
RP_ORIGIN=http://localhost:3000

# Optional: Disable auth for development
DISABLE_AUTH=false

# ========================================
# APPLICATION CONFIG
# ========================================
APP_NAME=Envoy AI
DEBUG=True
